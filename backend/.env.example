# ===========================================
# Environment Variables Template
# Copy this file and rename to:
#   .env.production  - for production
#   .env.staging     - for staging/testing
#   .env.development - for local development
# ===========================================

# Server
NODE_ENV=production|staging|development
PORT=3000

# PostgreSQL
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=btpdb
POSTGRES_USER=btpuser
POSTGRES_PASSWORD=YOUR_SECURE_PASSWORD_HERE

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# MinIO (Object Storage)
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_ACCESS_KEY=YOUR_ACCESS_KEY
MINIO_SECRET_KEY=YOUR_SECRET_KEY
MINIO_BUCKET=btp-attachments

# JWT Authentication
JWT_SECRET=YOUR_VERY_LONG_SECRET_KEY_HERE_MIN_32_CHARS
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# CORS
CORS_ORIGIN=https://marocinfra.com

# Upload
MAX_FILE_SIZE=52428800
UPLOAD_PATH=/app/uploads

# Debug (staging/development only)
DEBUG=false
LOG_LEVEL=info
