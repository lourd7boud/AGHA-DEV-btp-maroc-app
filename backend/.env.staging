# ===========================================
# STAGING Environment - Backend
# DO NOT USE IN PRODUCTION
# ===========================================

# Server
NODE_ENV=staging
PORT=3001

# PostgreSQL - Staging DB (separate from production)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=btpdb_staging
POSTGRES_USER=btpuser
POSTGRES_PASSWORD=BtpStaging2025!

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# MinIO
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_ACCESS_KEY=btpadmin
MINIO_SECRET_KEY=BtpMinio2025!
MINIO_BUCKET=btp-attachments-staging

# JWT - Different secret for staging
JWT_SECRET=BtpJwtSecretKeyStaging2025!
JWT_EXPIRES_IN=1d
JWT_REFRESH_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=*

# Upload
MAX_FILE_SIZE=52428800
UPLOAD_PATH=/app/uploads

# Debug
DEBUG=true
LOG_LEVEL=debug
